# https://docs.deno.com/deploy/manual/ci_github
# https://jsr.io/docs/publishing-packages#publishing-from-github-actions

name: jsr

on:
  push:
    branches:
      - main
      - phil-work

jobs:
  deno:
    runs-on: ubuntu-latest
    permissions:
      contents: read
      id-token: write # The OIDC ID token is used for authentication with JSR.
    environment: dev
    env:
      TEST_SAMPLE: ${{ vars.TEST_SAMPLE }}
      DENO_SUBHOSTING_ACCESS_TOKEN: ${{ secrets.DENO_SUBHOSTING_ACCESS_TOKEN }}
      DENO_SUBHOSTING_DEPLOY_ORG_ID: ${{ vars.DENO_SUBHOSTING_DEPLOY_ORG_ID }}
      PRIVY_APP_ID: ${{ vars.PRIVY_APP_ID }}
      PRIVY_APP_SECRET: ${{ secrets.PRIVY_APP_SECRET }}

    steps:
      - uses: actions/checkout@v3
      - uses: denoland/setup-deno@v1
        with:
          deno-version: v2

      - name: publish module ‚Üí "@sys/types"
        run: |
          cd code/sys/types
          deno task test --parallel
          deno publish

      - name: publish module ‚Üí "@sys/std"
        run: |
          cd code/sys/std
          deno task test --parallel
          deno publish

      - name: publish module ‚Üí "@sys/std-s"
        run: |
          cd code/sys/std-s
          deno task test --parallel
          deno publish

      - name: publish module ‚Üí "@sys/cmd"
        run: |
          cd code/sys/cmd
          deno task test --parallel
          deno publish

      - name: publish module ‚Üí "@sys/testing"
        run: |
          cd code/sys/testing
          deno task test --parallel
          deno publish

      - name: publish module ‚Üí "@sys/text"
        run: |
          cd code/sys/text
          deno task test --parallel
          deno publish

      - name: publish module ‚Üí "@sys/tmpl"
        run: |
          cd code/sys/tmpl
          deno task test --parallel
          deno publish

      - name: publish module ‚Üí "@sys/tmp"
        run: |
          cd code/sys.tmp
          deno task test --parallel
          deno publish

      - name: publish module ‚Üí "@sys/ui-css"
        run: |
          cd code/sys.ui/ui-css
          deno task test --parallel
          deno publish

      - name: publish module ‚Üí "@sys/ui-dom"
        run: |
          cd code/sys.ui/ui-dom
          deno task test --parallel
          deno publish

      - name: publish module ‚Üí "@sys/ui-react"
        run: |
          cd code/sys.ui/ui-react
          deno task test --parallel
          deno publish

      - name: publish module ‚Üí "@sys/ui-dev-harness"
        run: |
          cd code/sys.ui/ui-dev-harness
          deno task test --parallel
          deno publish

      #  üê∑
      # - name: publish module ‚Üí "@sys/driver-automerge"
      #   run: |
      #     cd code/sys.driver/driver-automerge
      #     deno task test --parallel
      #     deno publish

      - name: publish module ‚Üí "@sys/driver-deno"
        run: |
          cd code/sys.driver/driver-deno
          deno task test --parallel
          deno publish

      - name: publish module ‚Üí "@sys/driver-immer"
        run: |
          cd code/sys.driver/driver-immer
          deno task test --parallel
          deno publish

      - name: publish module ‚Üí "@sys/driver-obsidian"
        run: |
          cd code/sys.driver/driver-obsidian
          deno task test --parallel
          deno publish

      - name: publish module ‚Üí "@sys/driver-vite"
        run: |
          cd code/sys.driver/driver-vite
          deno task test --parallel --trace-leaks
          deno publish

      - name: publish module ‚Üí "@sys/driver-vitepress"
        run: |
          cd code/sys.driver/driver-vitepress
          deno task test --parallel --trace-leaks
          deno publish

      - name: publish module ‚Üí "@sys/driver-quilibrium"
        run: |
          cd code/sys.driver/driver-quilibrium
          deno task test --parallel
          deno publish
