{
  "tasks": {
    "info": "deno run -RE ./scripts/cmd.info.ts",
    "test": "deno run -RE --allow-run=sh ./scripts/cmd.ci.test.ts",
    "lint": "deno run -RE --allow-run=sh ./scripts/cmd.lint.ts",
    "dry": "deno run -RE --allow-run=sh ./scripts/cmd.ci.dry.ts",
    "ci": "deno run -RE --allow-run=sh ./scripts/cmd.ci.ts",
    "clean": "deno run -RWE --allow-run=sh ./scripts/cmd.clean.ts",
    "tmp": "deno run -A ./scripts/-tmp.ts"
  },
  "compilerOptions": {
    "strict": true,
    "lib": ["dom", "dom.iterable", "dom.asynciterable", "deno.ns"],
    "jsx": "react-jsx",
    "jsxImportSource": "react"
  },
  "nodeModules": false,
  "workspace": [
    "./code/sys/std",
    "./code/sys/std-s",
    "./code/sys.tmp",
    "./code/sys.ui/ui-react",
    "./code/sys.ui/ui-vite",
    "./code/sys.driver/driver-automerge",
    "./code/sys.driver/driver-deno-cloud",
    "./code/-samples/deno.vite-react"
  ],
  "importMap": "./deno.imports.json",
  "lint": {
    "rules": {
      "exclude": ["no-explicit-any"]
    }
  }
}
