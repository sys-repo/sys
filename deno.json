{
  "tasks": {
    "help": "deno run -RE --allow-sys --allow-ffi ./-scripts/main.ts --info",

    "ci": "deno run -A ./-scripts/main.ts --dry --test --info",
    "test": "deno run -A ./-scripts/main.ts --test",
    "dry": "deno run -RE --allow-run --allow-sys --allow-ffi ./-scripts/main.ts --dry",
    "lint": "deno run -RE --allow-run=sh ./-scripts/main.ts --lint",

    "clean": "deno run -RWE --allow-sys --allow-ffi --allow-run=sh ./-scripts/main.ts --clean",
    "install": "deno install --reload",

    "prep-imports": "deno run -RWE --allow-ffi --allow-run ./-scripts/main.ts --prep",
    "prep-ci": "deno run -RWE --allow-ffi --allow-run ./-scripts/main.ts --prep-ci",
    "prep": "deno task prep-imports && deno task prep-ci",

    "bump": "deno run -RWE --allow-sys --allow-ffi --allow-run ./-scripts/main.ts --bump",
    "tmpl": "deno run -RWE ./-scripts/main.ts --tmpl",
    "cp": "deno run -RWE --allow-run=pbcopy ./-scripts/Task.-clipboard.ts",

    "tmp": "deno run -A ./-scripts/-tmp.ts"
  },
  "compilerOptions": {
    "strict": true,
    "lib": ["deno.ns", "esnext", "dom", "dom.iterable", "dom.asynciterable", "webworker"],
    "types": ["vite/client", "@types/react"],
    "jsx": "react-jsx",
    "jsxImportSource": "react"
  },
  "nodeModulesDir": "auto",
  "importMap": "deno.imports.json",
  "workspace": [
    "code/sys/types",
    "code/sys/std",
    "code/sys/color",

    "code/sys/testing",
    "code/sys/jsr",
    "code/sys/fs",
    "code/sys/cli",
    "code/sys/process",
    "code/sys/crypto",

    "code/sys/http",
    "code/sys/text",
    "code/sys/tmpl",
    "code/sys/cmd",
    "code/sys/schema",

    "code/sys.ui/ui-css",
    "code/sys.ui/ui-dom",
    "code/sys.ui/ui-react",
    "code/sys.ui/ui-react-devharness",
    "code/sys.ui/ui-react-components",

    "code/sys.driver/driver-automerge",
    "code/sys.driver/driver-deno",
    "code/sys.driver/driver-farcaster",
    "code/sys.driver/driver-immer",
    "code/sys.driver/driver-monaco",
    "code/sys.driver/driver-ollama",
    "code/sys.driver/driver-orbiter",
    "code/sys.driver/driver-peerjs",
    "code/sys.driver/driver-prosemirror",
    "code/sys.driver/driver-vite",

    "deploy/@tdb.fs",
    "deploy/@tdb.slc",
    "deploy/@tdb.slc.fs",
    "deploy/api.db.team",
    "deploy/tmp.db.team",

    "code/-tmpl",
    "code/-sample/@sample.tmp"
  ],
  "lint": {
    "rules": {
      "exclude": ["no-explicit-any", "no-slow-types"]
    }
  }
}
