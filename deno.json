{
  "tasks": {
    "info": "deno run -RE ./scripts/cmd.info.ts",
    "test": "deno run -RE --allow-run ./scripts/cmd.test.ts",
    "lint": "deno run -E --allow-run ./scripts/cmd.lint.ts",
    "dry": "deno run -RE --allow-run ./scripts/cmd.dry.ts",
    "ci": "deno run -RE --allow-run ./scripts/cmd.ci.ts",
    "tmp": "deno run -A ./scripts/-tmp.ts"
  },
  "compilerOptions": { "strict": true },
  "nodeModules": false,
  "workspace": [
    "./code/sys/std",
    "./code/sys/std-s",
    "./code/sys.driver/driver-automerge",
    "./code/sys.driver/driver-deno-cloud"
  ],
  "importMap": "./deno.imports.json",
  "lint": {
    "rules": {
      "exclude": ["no-explicit-any"]
    }
  }
}
